<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.RadioButton?>
<?import ru.gosarcho.TextFieldWithAutocomplete?>
<?import javafx.scene.control.ComboBox?>
<GridPane fx:controller="ru.gosarcho.Controller"
          xmlns:fx="http://javafx.com/fxml"
          alignment="center"
          hgap="10"
          vgap="10">
    <Label GridPane.columnIndex="0"
           GridPane.rowIndex="1"
           GridPane.rowSpan="1"
           GridPane.columnSpan="2">Исполнитель
    </Label>
    <ComboBox GridPane.columnIndex="1"
              GridPane.rowIndex="1"
              GridPane.rowSpan="1"
              GridPane.columnSpan="2"
              fx:id="comboBoxExecutors"></ComboBox>

    <Label GridPane.columnIndex="0"
           GridPane.rowIndex="2"
           GridPane.rowSpan="1"
           GridPane.columnSpan="2">Директория
    </Label>
    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="2"
               GridPane.rowSpan="1"
               GridPane.columnSpan="2"
               fx:id="path">I:\Оцифровка\Фонды
    </TextField>
    <Button GridPane.columnIndex="3"
            GridPane.rowIndex="2"
            GridPane.rowSpan="1"
            GridPane.columnSpan="1"
            onAction="#PathButtonClicked">...
    </Button>

    <Label GridPane.columnIndex="0"
           GridPane.rowIndex="3"
           GridPane.rowSpan="1"
           GridPane.columnSpan="2">ФОД
    </Label>
    <TextFieldWithAutocomplete GridPane.columnIndex="1"
                               GridPane.rowIndex="3"
                               GridPane.rowSpan="1"
                               GridPane.columnSpan="2"
                               promptText="Фонд Опись Дело"
                               fx:id="document">
    </TextFieldWithAutocomplete>

    <Label GridPane.columnIndex="0"
           GridPane.rowIndex="4"
           GridPane.rowSpan="1"
           GridPane.columnSpan="2"
           maxWidth="100"
           wrapText="true">Первые буквы старых имен
    </Label>
    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="4"
               GridPane.rowSpan="1"
               GridPane.columnSpan="2"
               fx:id="firstLetters">
    </TextField>

    <Label GridPane.columnIndex="0"
           GridPane.rowIndex="5"
           GridPane.rowSpan="1"
           GridPane.columnSpan="2">Числов файлов
    </Label>
    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="5"
               GridPane.rowSpan="1"
               GridPane.columnSpan="2"
               fx:id="countFiles">
    </TextField>


    <Label GridPane.columnIndex="0"
           GridPane.rowIndex="6"
           GridPane.rowSpan="1"
           GridPane.columnSpan="2">Начальный лист
    </Label>
    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="6"
               GridPane.rowSpan="1"
               GridPane.columnSpan="2"
               fx:id="startSheet">
    </TextField>

    <Label GridPane.columnIndex="0"
           GridPane.rowIndex="7"
           GridPane.rowSpan="1"
           GridPane.columnSpan="2">Оборот
    </Label>
    <TextField GridPane.columnIndex="1"
               GridPane.rowIndex="7"
               GridPane.rowSpan="1"
               GridPane.columnSpan="2"
               fx:id="turnover">
    </TextField>

    <Label GridPane.columnIndex="0"
           GridPane.rowIndex="8"
           GridPane.rowSpan="1"
           GridPane.columnSpan="2">Номера через
    </Label>
    <RadioButton GridPane.columnIndex="1"
                 GridPane.rowIndex="8"
                 GridPane.rowSpan="1"
                 GridPane.columnSpan="1"
                 fx:id="oneListsPlus">1
    </RadioButton>
    <RadioButton GridPane.columnIndex="2"
                 GridPane.rowIndex="8"
                 GridPane.rowSpan="1"
                 GridPane.columnSpan="1"
                 fx:id="twoListsPlus">2
    </RadioButton>

    <Button GridPane.columnIndex="0"
            GridPane.rowIndex="10"
            GridPane.rowSpan="1"
            GridPane.columnSpan="1"
            fx:id="rename"
            onAction="#RenameButtonClicked">Переименовать
    </Button>
    <RadioButton GridPane.columnIndex="1"
                 GridPane.rowIndex="10"
                 GridPane.rowSpan="1"
                 GridPane.columnSpan="1"
                 fx:id="forward">Вперед
    </RadioButton>
    <RadioButton GridPane.columnIndex="2"
                 GridPane.rowIndex="10"
                 GridPane.rowSpan="1"
                 GridPane.columnSpan="1"
                 fx:id="back">Назад
    </RadioButton>

    <ProgressBar GridPane.columnIndex="0"
                 GridPane.rowIndex="11"
                 GridPane.rowSpan="1"
                 GridPane.columnSpan="1"
                 fx:id="progressBar">
    </ProgressBar>
    <Label GridPane.columnIndex="0"
           GridPane.rowIndex="12"
           GridPane.rowSpan="1"
           GridPane.columnSpan="4"
           textFill="red"
           fx:id="errorLabel"></Label>
</GridPane>